<Window x:Class="DatabaseMigrationTool.ImportOverwriteDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Import Will Overwrite Data" 
        Height="500" Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        ShowInTaskbar="False">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Warning Icon and Title -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
            <TextBlock Text="⚠️" FontSize="24" Margin="0,0,10,0" VerticalAlignment="Center"/>
            <TextBlock Text="Import Will Affect Existing Data" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
        </StackPanel>
        
        <!-- Main message -->
        <TextBlock Grid.Row="1" Text="The import operation will affect existing tables and data in the target database:" 
                   Margin="0,0,0,10" TextWrapping="Wrap"/>
        
        <!-- Summary -->
        <TextBlock Grid.Row="2" x:Name="SummaryTextBlock" Margin="0,0,0,15" 
                   FontWeight="SemiBold" Foreground="#D35400" TextWrapping="Wrap"/>
        
        <!-- Table conflicts list -->
        <Border Grid.Row="3" BorderBrush="#CCCCCC" BorderThickness="1" Margin="0,0,0,15">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Conflicting tables header -->
                    <TextBlock x:Name="ConflictHeaderTextBlock" Text="Tables with conflicts:" 
                               FontWeight="Bold" Margin="10,10,10,5" 
                               Visibility="Collapsed"/>
                    
                    <!-- Conflicting tables list -->
                    <ListBox x:Name="ConflictingTablesListBox" BorderThickness="0" Background="Transparent" 
                             Margin="10,0,10,10" Visibility="Collapsed">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="5">
                                    <TextBlock Text="{Binding TableName}" FontWeight="SemiBold" FontFamily="Consolas"/>
                                    <TextBlock Text="{Binding Description}" Foreground="#666666" Margin="10,2,0,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <!-- New tables header -->
                    <TextBlock x:Name="NewTablesHeaderTextBlock" Text="New tables to be created:" 
                               FontWeight="Bold" Margin="10,10,10,5" 
                               Visibility="Collapsed"/>
                    
                    <!-- New tables list -->
                    <ListBox x:Name="NewTablesListBox" BorderThickness="0" Background="Transparent" 
                             Margin="10,0,10,10" Visibility="Collapsed">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontFamily="Consolas" Margin="5,2" Foreground="#27AE60"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </ScrollViewer>
        </Border>
        
        <!-- Warning text -->
        <TextBlock Grid.Row="4" Margin="0,0,0,15" FontStyle="Italic" Foreground="#E74C3C" TextWrapping="Wrap">
            <Run Text="⚠️ Warning: "/>
            <Run Text="This operation may overwrite existing data or fail if tables already exist. "/>
            <Run Text="Make sure you have backups of important data before proceeding."/>
        </TextBlock>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="ProceedButton" Content="Proceed with Import" 
                    Width="150" Height="30" Margin="0,0,10,0"
                    Click="ProceedButton_Click"
                    Background="#E74C3C" Foreground="White"/>
            <Button x:Name="CancelButton" Content="Cancel" 
                    Width="100" Height="30" 
                    Click="CancelButton_Click"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>