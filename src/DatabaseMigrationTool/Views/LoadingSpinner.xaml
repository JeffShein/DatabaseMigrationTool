<UserControl x:Class="DatabaseMigrationTool.Views.LoadingSpinner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DatabaseMigrationTool.Views"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="30">
    <Grid>
        <Canvas RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" VerticalAlignment="Center" Width="30" Height="30">
            <Canvas.RenderTransform>
                <RotateTransform x:Name="SpinnerRotate" Angle="0" />
            </Canvas.RenderTransform>
            <Canvas.Resources>
                <Style TargetType="Ellipse">
                    <Setter Property="Width" Value="8" />
                    <Setter Property="Height" Value="8" />
                    <Setter Property="Fill" Value="#0078D7" />
                    <Setter Property="StrokeThickness" Value="1" />
                    <Setter Property="Stroke" Value="#003c6e" />
                </Style>
            </Canvas.Resources>
            <Ellipse Canvas.Left="12" Canvas.Top="0" Opacity="1.0" />
            <Ellipse Canvas.Left="20" Canvas.Top="3" Opacity="0.9" />
            <Ellipse Canvas.Left="24" Canvas.Top="11" Opacity="0.8" />
            <Ellipse Canvas.Left="20" Canvas.Top="19" Opacity="0.7" />
            <Ellipse Canvas.Left="12" Canvas.Top="24" Opacity="0.6" />
            <Ellipse Canvas.Left="4" Canvas.Top="19" Opacity="0.5" />
            <Ellipse Canvas.Left="0" Canvas.Top="11" Opacity="0.4" />
            <Ellipse Canvas.Left="4" Canvas.Top="3" Opacity="0.3" />
        </Canvas>
    </Grid>
</UserControl>