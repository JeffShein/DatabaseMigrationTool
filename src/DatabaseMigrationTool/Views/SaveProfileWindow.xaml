<Window x:Class="DatabaseMigrationTool.Views.SaveProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Save Connection Profile" Height="300" Width="450"
        WindowStartupLocation="CenterOwner" 
        ResizeMode="NoResize">
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Instructions -->
        <TextBlock Grid.Row="0" TextWrapping="Wrap" Margin="0,0,0,15">
            <Run FontWeight="Bold" Text="Save Connection Profile"/>
            <LineBreak/>
            <Run Text="Create a reusable profile for your database connection settings."/>
        </TextBlock>
        
        <!-- Profile Name -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Profile Name:" Margin="0,0,10,0" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1" x:Name="ProfileNameTextBox" 
                     ToolTip="Enter a unique name for this profile"/>
        </Grid>
        
        <!-- Description -->
        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Description:" Margin="0,5,10,0" VerticalAlignment="Top"/>
            <TextBox Grid.Column="1" x:Name="DescriptionTextBox" Height="60" TextWrapping="Wrap" AcceptsReturn="True"
                     ToolTip="Optional description for this profile"/>
        </Grid>
        
        <!-- Save Password Option -->
        <CheckBox Grid.Row="3" x:Name="SavePasswordCheckBox" Content="Save password (encrypted)" 
                 Margin="0,0,0,10" IsChecked="True"
                 ToolTip="Check to save password encrypted with the profile"/>
        
        <!-- Connection Preview -->
        <GroupBox Grid.Row="4" Header="Connection Preview" Margin="0,0,0,15">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="ConnectionPreviewTextBlock" TextWrapping="Wrap" FontFamily="Consolas" 
                          FontSize="11" Foreground="DarkBlue" Margin="5"/>
            </ScrollViewer>
        </GroupBox>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save Profile" Margin="5" Padding="15,5" IsDefault="True" Click="SaveButton_Click"/>
            <Button Content="Cancel" Margin="5" Padding="15,5" IsCancel="True" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>