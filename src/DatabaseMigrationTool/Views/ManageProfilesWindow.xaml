<Window x:Class="DatabaseMigrationTool.Views.ManageProfilesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connection Profile Manager" Height="500" Width="700"
        WindowStartupLocation="CenterOwner" 
        ResizeMode="CanResize">
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" TextWrapping="Wrap" Margin="0,0,0,15">
            <Run FontWeight="Bold" FontSize="16" Text="Connection Profile Manager"/>
            <LineBreak/>
            <Run Text="Manage your saved database connection profiles. Double-click to select a profile."/>
        </TextBlock>
        
        <!-- Profile List -->
        <GroupBox Grid.Row="1" Grid.Column="0" Header="Saved Profiles" Margin="0,0,10,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Filter -->
                <Grid Grid.Row="0" Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Filter:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox Grid.Column="1" x:Name="FilterTextBox" TextChanged="FilterTextBox_TextChanged"
                            ToolTip="Filter profiles by name, provider, or server"/>
                    <Button Grid.Column="2" Content="âœ–" Margin="5,0,0,0" Click="ClearFilter_Click"
                           ToolTip="Clear filter"/>
                </Grid>
                
                <!-- Profiles ListView -->
                <ListView Grid.Row="1" x:Name="ProfilesListView" SelectionChanged="ProfilesListView_SelectionChanged"
                         MouseDoubleClick="ProfilesListView_MouseDoubleClick">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Name" Width="150" DisplayMemberBinding="{Binding Name}"/>
                            <GridViewColumn Header="Provider" Width="80" DisplayMemberBinding="{Binding Provider}"/>
                            <GridViewColumn Header="Server" Width="120" DisplayMemberBinding="{Binding Server}"/>
                            <GridViewColumn Header="Database" Width="100" DisplayMemberBinding="{Binding Database}"/>
                            <GridViewColumn Header="Last Used" Width="100">
                                <GridViewColumn.DisplayMemberBinding>
                                    <Binding Path="LastUsed" StringFormat="{}{0:MM/dd/yyyy}"/>
                                </GridViewColumn.DisplayMemberBinding>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </GroupBox>
        
        <!-- Profile Details and Actions -->
        <GroupBox Grid.Row="1" Grid.Column="1" Header="Profile Details">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Details Panel -->
                <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Margin="0,0,0,10">
                    <StackPanel x:Name="DetailsPanel">
                        <TextBlock Text="Select a profile to view details" 
                                  x:Name="NoSelectionText" 
                                  Foreground="Gray" 
                                  FontStyle="Italic"/>
                                  
                        <Grid x:Name="DetailsGrid" Visibility="Collapsed">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" FontWeight="Bold" Margin="0,0,5,5"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="DetailNameText" Margin="0,0,0,5" TextWrapping="Wrap"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Provider:" FontWeight="Bold" Margin="0,0,5,5"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="DetailProviderText" Margin="0,0,0,5"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Server:" FontWeight="Bold" Margin="0,0,5,5"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="DetailServerText" Margin="0,0,0,5" TextWrapping="Wrap"/>
                            
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Database:" FontWeight="Bold" Margin="0,0,5,5"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="DetailDatabaseText" Margin="0,0,0,5"/>
                            
                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Username:" FontWeight="Bold" Margin="0,0,5,5"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" x:Name="DetailUsernameText" Margin="0,0,0,5"/>
                            
                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Created:" FontWeight="Bold" Margin="0,0,5,5"/>
                            <TextBlock Grid.Row="5" Grid.Column="1" x:Name="DetailCreatedText" Margin="0,0,0,5"/>
                            
                            <TextBlock Grid.Row="6" Grid.Column="0" Text="Last Used:" FontWeight="Bold" Margin="0,0,5,5"/>
                            <TextBlock Grid.Row="6" Grid.Column="1" x:Name="DetailLastUsedText" Margin="0,0,0,5"/>
                            
                            <TextBlock Grid.Row="7" Grid.Column="0" Text="Description:" FontWeight="Bold" Margin="0,0,5,10" VerticalAlignment="Top"/>
                            <TextBlock Grid.Row="7" Grid.Column="1" x:Name="DetailDescriptionText" Margin="0,0,0,10" 
                                      TextWrapping="Wrap" VerticalAlignment="Top"/>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
                
                <!-- Action Buttons -->
                <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Stretch">
                    <Button Content="Select Profile" Margin="0,0,0,5" Padding="10,5" Click="SelectProfile_Click"
                           x:Name="SelectButton" IsEnabled="False"/>
                    <Button Content="Edit Profile" Margin="0,0,0,5" Padding="10,5" Click="EditProfile_Click"
                           x:Name="EditButton" IsEnabled="False"/>
                    <Button Content="Duplicate Profile" Margin="0,0,0,5" Padding="10,5" Click="DuplicateProfile_Click"
                           x:Name="DuplicateButton" IsEnabled="False"/>
                    <Separator Margin="0,5"/>
                    <Button Content="Delete Profile" Margin="0,5,0,0" Padding="10,5" Click="DeleteProfile_Click"
                           x:Name="DeleteButton" IsEnabled="False" Background="#FFE6E6" BorderBrush="Red"/>
                </StackPanel>
            </Grid>
        </GroupBox>
        
        <!-- Bottom Buttons -->
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Import Profiles..." Margin="0,0,10,0" Padding="15,5" Click="ImportProfiles_Click"/>
            <Button Content="Export Profiles..." Margin="0,0,10,0" Padding="15,5" Click="ExportProfiles_Click"/>
            <Button Content="Close" Margin="0,0,0,0" Padding="15,5" IsDefault="True" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>