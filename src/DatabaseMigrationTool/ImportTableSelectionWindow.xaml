<Window x:Class="DatabaseMigrationTool.ImportTableSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Tables to Import" 
        Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Select tables to import from the export data:" 
                   FontSize="14" FontWeight="SemiBold" Margin="0,0,0,15"/>
        
        <!-- Search box -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <TextBox x:Name="SearchTextBox" TextChanged="SearchTextBox_TextChanged"/>
            <TextBlock Text="Search tables..." 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Left" 
                       Margin="5,0,0,0" 
                       Foreground="Gray"
                       IsHitTestVisible="False">
                <TextBlock.Style>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Text, ElementName=SearchTextBox}" Value="">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Grid>
        
        <!-- Tables list -->
        <Border Grid.Row="2" BorderBrush="#CCCCCC" BorderThickness="1" Margin="0,0,0,15">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Select All / None buttons -->
                    <Border Background="#F5F5F5" BorderBrush="#CCCCCC" BorderThickness="0,0,0,1">
                        <StackPanel Orientation="Horizontal" Margin="10,8">
                            <Button Content="Select All" Click="SelectAll_Click" 
                                    Margin="0,0,10,0" Padding="8,4"/>
                            <Button Content="Select None" Click="SelectNone_Click" 
                                    Padding="8,4"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Tables ItemsControl -->
                    <ItemsControl x:Name="TablesItemsControl" Margin="10">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,3">
                                    <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" 
                                              VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Table.FullName}" 
                                                   FontFamily="Consolas" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding ColumnsSummary}" 
                                                   Foreground="#666666" FontSize="11" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
        </Border>
        
        <!-- Status -->
        <TextBlock Grid.Row="3" x:Name="StatusTextBlock" 
                   HorizontalAlignment="Left" Margin="0,0,0,10"/>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="75" Height="30" Margin="0,0,10,0"
                    Click="OK_Click" IsDefault="True"/>
            <Button Content="Cancel" Width="75" Height="30" 
                    Click="Cancel_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>