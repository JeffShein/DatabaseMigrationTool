<Window x:Class="DatabaseMigrationTool.RecoveryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DatabaseMigrationTool"
        Title="Resume Operations" Height="500" Width="700"
        WindowStartupLocation="CenterOwner" 
        ResizeMode="CanResize">
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock FontSize="16" FontWeight="Bold" Text="Resume Interrupted Operations"/>
            <TextBlock Foreground="Gray" Text="Select an operation to resume or view its details."/>
        </StackPanel>
        
        <!-- Operations List -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Filter/Actions -->
            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Operations found:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock x:Name="OperationCountText" Text="0" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>
                
                <Button Grid.Column="1" Content="Cleanup Old Operations" Click="CleanupOld_Click" Padding="10,5"/>
            </Grid>
            
            <!-- Operations ListView -->
            <ListView Grid.Row="1" x:Name="OperationsListView" SelectionChanged="OperationsListView_SelectionChanged">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Type" Width="80" DisplayMemberBinding="{Binding OperationType}"/>
                        <GridViewColumn Header="Status" Width="80">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Status}" 
                                                  Foreground="{Binding Status, Converter={StaticResource StatusColorConverter}}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Provider" Width="80" DisplayMemberBinding="{Binding Provider}"/>
                        <GridViewColumn Header="Progress" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding ProgressPercentage, StringFormat={}{0:F1}%}" 
                                                  HorizontalAlignment="Center"/>
                                        <ProgressBar Value="{Binding ProgressPercentage}" Height="4" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Started" Width="120">
                            <GridViewColumn.DisplayMemberBinding>
                                <Binding Path="StartTime" StringFormat="{}{0:MM/dd/yyyy HH:mm}"/>
                            </GridViewColumn.DisplayMemberBinding>
                        </GridViewColumn>
                        <GridViewColumn Header="Duration" Width="80">
                            <GridViewColumn.DisplayMemberBinding>
                                <Binding Path="Duration" StringFormat="{}{0:hh\\:mm\\:ss}"/>
                            </GridViewColumn.DisplayMemberBinding>
                        </GridViewColumn>
                        <GridViewColumn Header="Tables" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="{}{0}/{1}">
                                                <Binding Path="CompletedTables.Count"/>
                                                <Binding Path="RemainingTables.Count"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
            
            <!-- No Operations Message -->
            <TextBlock Grid.Row="1" x:Name="NoOperationsText" 
                      Text="No recoverable operations found." 
                      HorizontalAlignment="Center" VerticalAlignment="Center" 
                      Foreground="Gray" FontStyle="Italic"
                      Visibility="Collapsed"/>
            
            <!-- Operation Details -->
            <GroupBox Grid.Row="2" Header="Operation Details" Margin="0,10,0,0" 
                     x:Name="DetailsGroup" Visibility="Collapsed">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Operation ID:" Margin="0,0,10,5" FontWeight="Bold"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" x:Name="DetailOperationId" Margin="0,0,20,5"/>
                    
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Path:" Margin="0,0,10,5" FontWeight="Bold"/>
                    <TextBlock Grid.Row="0" Grid.Column="3" x:Name="DetailPath" Margin="0,0,0,5" TextTrimming="CharacterEllipsis"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Completed:" Margin="0,0,10,5" FontWeight="Bold"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" x:Name="DetailCompleted" Margin="0,0,20,5"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="2" Text="Failed:" Margin="0,0,10,5" FontWeight="Bold"/>
                    <TextBlock Grid.Row="1" Grid.Column="3" x:Name="DetailFailed" Margin="0,0,0,5"/>
                    
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Remaining:" Margin="0,0,10,5" FontWeight="Bold"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" x:Name="DetailRemaining" Margin="0,0,20,5"/>
                    
                    <TextBlock Grid.Row="2" Grid.Column="2" Text="Warnings:" Margin="0,0,10,5" FontWeight="Bold"/>
                    <TextBlock Grid.Row="2" Grid.Column="3" x:Name="DetailWarnings" Margin="0,0,0,5"/>
                    
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Last Error:" Margin="0,0,10,0" FontWeight="Bold" VerticalAlignment="Top"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" x:Name="DetailLastError" 
                              TextWrapping="Wrap" Foreground="Red" Margin="0,0,0,0"/>
                </Grid>
            </GroupBox>
        </Grid>
        
        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="ResumeButton" Content="Resume Operation" Margin="0,0,10,0" Padding="15,5" 
                   Click="Resume_Click" IsEnabled="False"/>
            <Button x:Name="DeleteButton" Content="Delete Operation" Margin="0,0,10,0" Padding="15,5" 
                   Click="Delete_Click" IsEnabled="False" Background="#FFE6E6"/>
            <Button Content="Close" Padding="15,5" IsCancel="True" Click="Close_Click"/>
        </StackPanel>
    </Grid>
    
    <Window.Resources>
        <local:StatusColorConverter x:Key="StatusColorConverter"/>
    </Window.Resources>
</Window>